<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_productCart"
                android:layout_width="wrap_content"
                android:layout_height="81dp" />

            <ImageView
                android:id="@+id/img_ProductCart"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/iphone12promax"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ProductCartName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iphone 12"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/tv_ProductCartPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12.000.000 VND"
                    android:textColor="@color/material_red"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_color_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Màu:"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_ProductCartColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xanh Dương"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_storage_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dung lượng:"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_ProductCartStorage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="256GB"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_minusProductCart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_remove_24"/>

                    <TextView
                        android:id="@+id/tv_countProductCart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="1"
                        android:textSize="20sp"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                    <ImageView
                        android:id="@+id/img_plusProductCart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_add_24"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_removeProductCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_delete_24"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>